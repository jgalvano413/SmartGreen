<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationView">
        <item name="itemIconSize">32dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.InactiveText</item>
    </style>

    <style name="BottomNavigationView.ActiveText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BottomNavigationView.InactiveText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#CCCCCC</item>
    </style>
</resources>